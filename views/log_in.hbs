<div class="container-fluid auth-container page-container log-in">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Log in to your account</h5>
            {{#if message}}
            <div class="row mb-3">
                <div class="col">
                    <div class="alert alert-danger" role="alert">
                        {{message}}
                    </div>
                </div>
            </div>

            {{/if}}
            <form action="/login" method="post">
                <div class="form-group row mb-2">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Username or Email" name="usernameOrEmail"
                            required>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col">
                        <input type="password" class="form-control" placeholder="Password" name="password" required>
                        <small><a href="reset_password.html">Forgot password?</a></small>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <button type="submit" class="btn ">LOG IN</button>
                        {{!-- <a href="profile.html" class="btn">LOG IN</a> --}}
                    </div>
                </div>
                <div class="row mb-1">
                    <div class="col">
                        <small>Donâ€™t have an account yet? <a href="/signup">Sign up.</a></small>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>