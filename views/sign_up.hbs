<div class="container-fluid auth-container page-container sign-up">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create an account to secure your tickets today!</h5>
            <form action="/signup" method="post">
                <div class="form-group row mb-2">
                    <div class="col">
                        <input type="text" class="form-control" id="email" placeholder="Email" name="email" required="required">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col">
                        <input type="text" class="form-control" id="fname" placeholder="First Name" name="fname"
                            required="required">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col">
                        <input type="text" class="form-control" id="lname" placeholder="Last Name" name="lname"
                            required="required">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col">
                        <input type="text" class="form-control" id="username" placeholder="Username" name="username"
                            required="required">
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col text-center">
                        <input type="password" class="form-control" id="password" placeholder="Password" name="password"
                            required="required">
                    </div>
                </div>
                <div class="form-group row mb-1">
                    <div class="col">
                         <button type="submit" class="btn">SIGN UP</button> 
                        {{!-- <a href="profile.html" class="btn">SIGN UP</a> --}}
                    </div>
                </div>
                <div class="row mb-1">
                    <div class="col">
                        <small>Already have an account? <a href="/login">Log in.</a></small>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>